<h1>Edit Your Profile</h1>
<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>  <!-- change to a class and add line height to 1em-->
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br><br>
  <%= f.label :hairtype %>
  <%= f.collection_select :hairtype_id, Hairtype.all, :id, :name %>
  <br><br>
  <%= f.submit %>
<% end %>
